codebrag {
    data-dir = "./data"
    repos-root = "./repos"
    send-anon-usage-data = true
    web-server-port = 8080
    application-url = "http://localhost:8080"

    # number of people who need to review a commit (1, 2, ..., all)
    required-reviewers-count = 1
}

email-notifications {
    enabled = true
    daily-digest-hour = 6
}

### internal SMTP server or external one (e.g. GMail account or http://mandrill.com)
email {
    smtp-host = "smtp.gmail.com"
    smtp-port = "465"
    smtp-username = ""
    smtp-password = ""
    from = "notifications@codebrag.com"
    encoding = "UTF-8"
    ssl-connection = true
    verify-ssl-certificate = true
}

### allows define hooks for different events
hooks {
    ### send like events to these hooks
    like-event-urls = ["http://localhost:8000"]
}
